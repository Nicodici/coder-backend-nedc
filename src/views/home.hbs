<h2 class="text-center mt-5 mb-5 p-5 bg-dark text-white rounded shadow text-uppercase">Catalogo de Productos</h2>

<p><strong>{{error}}</strong></p>

<div class="container text-center">
    <div class="row justify-content-md-center">
        {{#if payload}}
        {{#each payload}}

        <div class="col-8 col-md-4 col-lg-3 mb-4">
            <div class="card">
                <img src="{{this.thumbnail}}" class="rounded mx-auto d-block" style="max-width: 100%;" alt="150px">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">${{this.price}}</p>
                    <p>Stock: {{this.stock}}</p>
                    <button onclick="addToCart('{{this._id}}')" type="button" class="btn btn-dark"><i class="bi bi-cart-plus me-2"></i>Agregar al carrito</button>
                </div>
            </div>
        </div>
        {{/each}}

        <nav aria-label="Page navigation example mt-5">
            <ul class="pagination justify-content-center">
                {{#if hasPrevPage}}
                <li class="page-item"><a class="page-link" href={{prevLink}}>Anterior</a></li>
                {{/if}}
                <li class="page-item"><a class="page-link" href={{url}}>{{page}}</a></li>
                {{#if hasNextPage}}
                <li class="page-item"><a class="page-link" href={{nextLink}}>Siguiente</a></li>
                {{/if}}
            </ul>
        </nav>

        {{else}}
        <h2>No hay productos</h2>
        {{/if}}

    </div>
</div>

<p class="d-inline-flex gap-1 mx-3">
    <a class="btn btn-success" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false"
        aria-controls="collapseExample">
        <i class="bi bi-chat-text mx-2"></i>Chat
    </a>
</p>
<div class="collapse" id="collapseExample">
    <div class="card card-body">
        <div id="messageLogs"></div>
        <input id="chatbox" type="text" placeholder="Ingrese el mensaje" />


    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/home.js"></script>