<h2>Tu Carrito</h2>

<div class="container text-center">
  <div class="row justify-content-md-center">
    {{#if carrito.length}}
      {{#each carrito}}
        {{#each products}}
          <div class="col-8 col-md-4 col-lg-3 mb-4">
            <div class="card">
              <img
                src="{{this._id.thumbnail}}"
                class="rounded mx-auto d-block"
                style="max-width: 100%;"
                alt="150px"
              />
              <div class="card-body">
                <h5 class="card-title">{{this._id.title}}</h5>
                <p class="card-text">${{this._id.price}}</p>
              </div>
            </div>
          </div>
        {{/each}}
      {{/each}}
    {{else}}
      <h2>Tu carrito está vacío</h2>
    {{/if}}
  </div>
</div>