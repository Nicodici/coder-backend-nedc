<h2 class="text-center p-5 bg-dark text-white rounded shadow">PERFIL DE USUARIO</h2>

<div
  class="card border-primary mx-auto mb-3 mt-5 bg-dark"
  style="max-width: 700px;"
>
  <div class="row g-0 p-4 bg-dark">
    <div class="col-md-4 my-auto">
    </div>
    <div class="col-md-8 p-4">
      <div class="card-body">
        <div class="card-header text-white">Tu Perfil</div>
        <br />
        <p class="card-text text-white"><strong>Nombre:</strong>
          {{user.first_name}}</p>
        <p class="card-text text-white"><strong>Apellido:</strong>
          {{user.last_name}}</p>
        <p class="card-text text-white"><strong>Email:</strong>
          {{user.email}}</p>
        <p class="card-text text-white"><strong>Rol:</strong> {{user.role}}</p>
      </div>
      <button type="submit" id="logoutButton">Cerrar sesion
      </button>
    </div>
  </div>
</div>

<script src="js/logout.js"></script>