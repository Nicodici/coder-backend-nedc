<h2 class="text-center p-5 bg-dark text-white rounded shadow">PRODUCTOS</h2>
{{#if isAdmin}}
  <form
    class="forms"
    id="formProduct"
    method="post"
    action="/api/products/"
    enctype="multipart/form-data"
  >
    <h2>Formulario de ingreso de producto</h2>
    <input
      class="controls"
      type="text"
      name="title"
      id="title"
      placeholder="Titulo del Producto"
    />
    <input
      class="controls"
      type="text"
      name="description"
      id="description"
      placeholder="Ingrese su descripcion"
    />
    <input
      class="controls"
      type="number"
      name="stock"
      id="stock"
      placeholder="Stock disponible"
    />
    <select class="form-control controls" id="category" name="category">
      <option value="Zapatilla">Zapatilla</option>
      <option value="Remera">Remera</option>
      <option value="Pantalon">Pantalon</option>
      <option value="Campera">Campera</option>
    </select>
    <input
      class="controls"
      type="number"
      name="price"
      id="price"
      placeholder="Precio"
    />
    <input
      class="controls"
      type="text"
      name="code"
      id="code"
      placeholder="Codigo"
    />
    <p>Ingrese imagen del producto:</p>
    <input type="file" name="avatar" />
    <div class="d-grid gap-2">
      <button class="btn btn-success m-2" type="submit">Agregar</button>
    </div>

    <br />
    <h2> Eliminar un producto:</h2>
    <input
      class="controls"
      type="string"
      name="id-prod"
      id="id-prod"
      placeholder="Ingrese ID"
    />
    <div class="d-grid gap-2">
      <button
        class="btn btn-danger"
        type="button"
        id="delete-btn"
      >Eliminar</button>
    </div>
  </form>

{{else}}

  <div class="alert alert-danger" role="alert">
    No puedes agregar o eliminar productos. Deberas loguearte y poseer los
    permisos necesarios (Rol necesario: admin).
  </div>
{{/if}}
<div class="container">
  <h1 class="text-white">Lista de Productos</h1>
</div>
<article class="m-5" id="list-products">

</article>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>